{
    "name": "server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "watch": "tsc -w",
        "dev": "nodemon -r dotenv/config dist/index.js",
        "start": "node -r dotenv/config dist/index.js",
        "create:migration": "npx mikro-orm migration:create",
        "test": "cross-env NODE_DEV=true NODE_ENV=test ts-mocha src/tests/**/*.test.ts --package package.json"
    },
    "devDependencies": {
        "@types/chai": "^4.2.21",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.12",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "chai": "^4.3.4",
        "cross-env": "^7.0.3",
        "mocha": "^9.0.3",
        "nodemon": "^2.0.9",
        "supertest": "^6.1.4",
        "ts-mocha": "^8.0.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "@mikro-orm/cli": "^4.5.7",
        "@mikro-orm/core": "^4.5.7",
        "@mikro-orm/migrations": "^4.5.7",
        "@mikro-orm/postgresql": "^4.5.7",
        "apollo-server-express": "^2.25.2",
        "argon2": "^0.28.2",
        "class-validator": "^0.13.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "graphql": "^15.5.1",
        "graphql-fields-to-relations": "^1.0.4",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.6.0",
        "type-graphql": "^1.1.1",
        "uuid": "^8.3.2"
    },
    "mocha": {
        "require": [
            "ts-node/register/transpile-only",
            "tsconfig-paths/register",
            "dotenv/config",
            "reflect-metadata"
        ],
        "recursive": true,
        "exit": true,
        "timeout": 99999,
        "forbidPending": true,
        "color": true
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.ts",
            "./dist/mikro-orm.config.js"
        ]
    },
    "prettier": {
        "tabWidth": 4
    }
}
